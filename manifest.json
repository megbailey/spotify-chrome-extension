{
	"name": "Spotify Player",
		"version": "0.1.0",
		
		"description": "Attempting to build a small Spotify interface!",
		"minimum_chrome_version": "46",
		"background": {
			"scripts": [
			"scripts/spotify-web-api.js",
			"scripts/handlebars.js"
			],
			"persistent": true
		},
		
		"browser_action": {
			"default_popup": "main.html",
			"default_icon": "/images/spotify-black-green.png"
		},
		
		"options_page": "/html/options.html",
		
		"permissions": [
		"activeTab", 
		"storage", 
		"tabs",
		"contextMenus",
		"https://open.spotify.com/*"
		],
		
		"icons": {
			"16": "images/spotify-black-green.png"
		},
		"manifest_version": 2
}
