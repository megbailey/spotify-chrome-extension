{
	"name": "Spotify Player",
		"version": "0.1.0",
		"description": "Attempting to build a small Spotify interface!",
		"permissions": ["activeTab", "storage", "tabs", "https://open.spotify.com/*","contextMenus"],
		"background": {
			"scripts": ["auth.js"],
			"persistent": false
		},
		"options_page": "/html/options.html",
		"page_action": {
			"default_popup": "/html/main.html",
			"default_icon": {
				"images/spotify-black-green.png"
			}
		},
		"icons": {
			"images/spotify-green-black.png",
			"images/spotify-green-white.png",
			"images/spotify-black-green.png",
			"images/spotify-black-white.png"
		},
		"manifest_version": 2
}
